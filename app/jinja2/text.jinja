{% extends 'base.jinja' %}

{% block main %}
    {% include 'common/entry.jinja' %}

    <div class="textual">
        {% for line in lines %}
            {% if line[1] %}
                <p><strong>{{ line[0] }}</strong></p>
            {% else %}
                <p>{{ line[0] }}</p>
            {% endif %}
        {% else %}
            <p>{{ article.description }}</p>
        {% endfor %}
    </div>
{% endblock %}