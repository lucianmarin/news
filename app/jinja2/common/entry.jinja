<div class="entry {{ mode }}">
    <h4 class="title">
        <a href="{{ article.url }}">{{ article.title }}</a>
    </h4>
    <div class="small">
        <a>{{ article.domain }}</a>
        <b>&bull;</b>
        <b>{{ article.pub | shortdate }} ago</b>
        <b>&bull;</b>
        <a href="{{ reverse('read', args=[article.id]) }}">read</a>
        {% if article.score %}
            <b>&bull;</b>
            <b>{{ article.score // 3 }} score</b>
        {% endif %}
    </div>
    {% if article.description and mode == 'details' %}
        <div class="summary">
            {{ article.description | truncate(320) }}
        </div>
    {% endif %}
</div>
