<div class="entry">
    <h4 class="title">
        <a href="{{ article.url }}">{{ article.title }}</a>
    </h4>
    <div class="small">
        <a>{{ article.domain }}</a>
        <b>&bull;</b>
        <b>{{ article.pub | shortdate }} ago</b>
        <b>&bull;</b>
        <a href="{{ reverse('read', args=[article.id]) }}">read</a>
        {% if article.comments and view == 'commented' %}
            <b>&bull;</b>
            <b>{{ article.comments }} comments</b>
        {% endif %}
        {% if article.reactions and view == 'reacted' %}
            <b>&bull;</b>
            <b>{{ article.reactions }} reactions</b>
        {% endif %}
        {% if article.shares and view == 'index' %}
            <b>&bull;</b>
            <b>{{ article.shares }} shares</b>
        {% endif %}
    </div>
    {% if article.description %}
        <div class="summary">
            {{ article.description | truncate(320) }}
        </div>
    {% endif %}
</div>
