<!doctype html>
<html lang="en">
<head>
    <title>Newscafe</title>
    <meta charset="utf-8">
    <meta name="referrer" content="always">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0">
    <meta name="author" content="Lucian Marin">
    <meta name="description" content="24/7 Quality News">
    <link rel="apple-touch-icon" type="image/png" href="/static/192.png">
    <link rel="icon" sizes="192x192" type="image/png" href="/static/192.png">
    <link rel="manifest" type="application/json" href="/static/manifest.json">
    <link rel="stylesheet" type="text/css" href="/static/_{{theme}}.css?v={{v}}">
</head>
<body>
    <div class="menu">
        <h1>
            {% block menu %}
                <a class="{% if view == 'index' %}selected{% endif %}" href="{{ reverse('index') }}">
                    Newscafe
                </a>
                <a class="{% if view == 'reacted' %}selected{% endif %}" href="{{ reverse('reacted') }}">
                    Reacted
                </a>
                <a class="{% if view == 'commented' %}selected{% endif %}" href="{{ reverse('commented') }}">
                    Commented
                </a>
                <a class="{% if view == 'recent' %}selected{% endif %}" href="{{ reverse('recent') }}">
                    Recent
                </a>
            {% endblock %}
        </h1>
    </div>
    <div class="main">
        {% block main %}{% endblock %}
    </div>
    <div class="footer">
        <a href="{{ reverse('index') }}">Newscafe</a>
        <b>&frasl;</b>
        <a href="{{ reverse('about') }}">About</a>
        <b>&frasl;</b>
        {% if theme == 'dark' %}
            <a href="{{ reverse('light') }}">Light</a>
        {% else %}
            <a href="{{ reverse('dark') }}">Dark</a>
        {% endif %}
        <b>&frasl;</b>
        <b>{{ count }} articles</b>
    </div>
</body>
</html>
